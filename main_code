from flask import Flask
from flask import render_template
from flask import request
import requests

app = Flask(__name__)

@app.route('/usersdata', methods=['GET', 'POST'])
def usersdata():
    area = request.form['area']
    anstime = time(area)
    answer = f'Time, you was looking for is {time}'
    return render_template('usersdata.html', answer=answer)

def time(area):
    url = 'http://worldtimeapi.org/api/timezone/{area}'
    response = requests.get(url)
    if response.status_code == 200:
        data = response.json()
        anstime = data['datetime']
        return anstime
    return "0"

if __name__ == '__main__':
    app.run(debug=True)
